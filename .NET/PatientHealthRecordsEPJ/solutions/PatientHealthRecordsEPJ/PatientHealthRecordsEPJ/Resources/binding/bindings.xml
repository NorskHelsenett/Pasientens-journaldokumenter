        <xjc:javaType name="java.time.LocalDate" xmlType="xs:date" adapter="no.helse.kj.tjeneste.adapter.LocalDateAdapter"/>
        <xjc:javaType name="java.time.OffsetDateTime" xmlType="xs:dateTime" adapter="no.helse.kj.tjeneste.adapter.OffsetDateTimeAdapter"/>
